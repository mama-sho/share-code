<!--サインアップ画面-->
<!DOCTYPE html>
<html lang="ja">
  <%- include('include/head') %>
  <body id="signup-body">
    <!-- ヘッダー部分 -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: black;">
      <div class="container">
        <h2 class="navber-brand font-italic text-light">Share code</h2>
        <div class="float-right">
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <div class="float-right d-none d-sm-block">
              <ul class="navbar-nav">
                <li class="nav-item ml-1">
                  <a class="nav-link ml-2" href="/">Top</a>
                </li>
                <li class="nav-item ml-1">
                  <a class="nav-link ml-2" href="/user-list">Users</a>
                </li>
                <li class="nav-item ml-1">
                  <a class="nav-link ml-2" href="/posts/new">New</a>
                </li>
                <li class="nav-item ml-1">
                  <a class="nav-link ml-2" href="/mypage">My page</a>
                </li>
                <li class="nav-item ml-1">
                  <a class="nav-link ml-2" href="/login">Login</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <h1 class="pl-5">Sing-up</h1>
        <form action="/signup" method="post" encType="multipart/form-data">
          <input type="hidden" name="_csrf" value="<%- csrfToken %>">
          <div class="w-100" style="border:1px solid #333"></div>

          <div class="col-12 pt-4 pl-5">
            <div class="text-center">
              <img
                class="signup-icon"
                id="preview"
                src="https://s3-ap-northeast-1.amazonaws.com/share-code.bucket/no-iamge.png"
                 alt="">
            </div>
          </div>
          
          <div class="col-4 ml-4 mt-3">
            <input type="file" name="icon" id="file" accept="image/*"/>
          </div>

          <div class="form-control mt-2">
            <div class="">
              <label>username</label>
              <input
                maxlength="20"
                required
                name="name"
                class="form-control bg-light"
                type="text"
                placeholder="ユーザー名を入力してください"
              />
            </div>

            <div class="">
              <label>email</label>
              <input
                required
                name="email"
                class="form-control bg-light"
                type="text"
                placeholder="メールアドレスを入力してください"
              />
            </div>

            <div class="">
              <label>password</label>
              <input
                required
                name="password"
                class="form-control bg-light"
                type="password"
                placeholder="パスワードの設定"
              />
            </div>
          </div>

          <!--ここに紹介文を追加-->
          <div class="form-group">
            <label for="profile" class="mt-3 ml-3">profile</label>
            <textarea
              required
              rows="5"
              name="profile"
              class="form-control bg-light"
              value=""
              placeholder="自己紹介文…好きなアーティストや好きな楽器"
            ></textarea>
          </div>

          <div class="col-3 float-right">
            <button class="btn btn-primary">サインアップ</button>
          </div>

        </form>
      </div>
    </div>

    <script>
      // アイコン画像のプレビューを実装
      document.getElementById('file').addEventListener('change', function (e) {
        // 1枚だけ表示する
        var file = e.target.files[0];
  
        // ファイルリーダー作成
        var fileReader = new FileReader();
        fileReader.onload = function() {
          // Data URIを取得
          var dataUri = this.result;
  
          // img要素に表示
          var img = document.getElementById('preview');
          img.src = dataUri;
        };
        // ファイルをData URIとして読み込む
        fileReader.readAsDataURL(file);
      });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/bunble.js" type="javascript"></script>
  </body>
</html>