<!DOCTYPE html>
<html lang="ja">
  <%- include('include/head') %>
  <body>
    <!--ヘッダー部分-->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3 fixed-top">
      <div class="container">
        <h2 class="navbar-brand font-italic">Share Code</h2>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/posts" class="nav-link">トップ</a></li>
          <li class="nav-item active">
            <a class="nav-link">ユーザー</a></li>
          <li class="nav-item">
            <a href="/posts/new" class="nav-link">新規投稿</a>
          </li>
          <li class="nav-item">
            <a href="/mypage" class="nav-link">マイページ</a>
          </li>
          <li class="nav-item">
            <a href="/login" class="nav-link">ログイン</a>
          </li>
        </ul>
      </div>
    </nav>

    <!--メイン-->
    <div class="container">
      <h1>ユーザー一覧</h1>
      <div class="w-100 h-75"></div>
      <div class="w-100 mt-5" style="border:1px solid #333">　　</div>
      <div class="row">
      <% users.forEach(user => { %>
        <div class="mt-5 col-md-6">
          <img
            class="userlist-icon"
            src="https://s3-ap-northeast-1.amazonaws.com/share-code.bucket/upload-icon/<%= user.iconFileName %>"
            alt=""
          />
          <span>
            <span class="userlist-name pl-5">
              <%= user.name %>
            </span>
            <span>
              投稿数<%= post.filter((v) => user.id === v.userId).length %>
            </span>
            <span>
              
            </span>
          </span>
        </div>
      <% }); %>
      </div>
    </div>

    <script src="/javascripts/bunble.js"></script>
  </body>
</html>
