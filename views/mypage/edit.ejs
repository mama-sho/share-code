<!--マイページ-->
<!DOCTYPE html>
<html lang="ja">
  <%- include('../include/head') %>
  <body>
    <!-- ヘッダー部分 -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
      <div class="container">
        <h2 class="navbar-brand font-italic">Share Code</h2>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/posts" class="nav-link">トップ</a>
          </li>
          <li class="nav-item">
            <a href="/user-list" class="nav-link">ユーザー</a>
          </li>
          <li class="nav-item">
            <a href="/posts/new" class="nav-link">新規投稿</a>
          </li>
          <li class="nav-item">
            <a href="/mypage" class="nav-link">マイページ</a>
          </li>
          <li class="nav-item">
            <a href="/login" class="nav-link">ログイン</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <form method="post">
        <div class="row">
          <h1 class="pl-3">編集</h1>
          <div class="w-100" style="border: 1px solid #333;"></div>

          <div class="col-2 offset-md-1 mt-4">
            <img class="edit-icon" id="preview" src="https://s3-ap-northeast-1.amazonaws.com/share-code.bucket/upload-icon/<%= user.iconFileName %>" alt="">
          </div>

        <div class="d-flex flex-column row-h1 offset-md-3">
          <div class="item-h1 mt-5 ml-5">
            <label>username</label>
            <input
              required
              class="col-md-12 border border-info rounded"
              value="<%= user.name %>"
              name="name"
            />
          </div>

          <div class="item-h1 ml-5 mt-3">
            <label>email</label>
            <input
              required
              class="col-md-12 border border-info rounded"
              value="<%= user.email %>"
              name="email"
            />
          </div>

          <div class="item-h1 ml-5 mt-3">
            <label>password</label>
            <input
              required
              class="col-md-12 border border-info rounded"
              value="<%= user.password %>"
              name="password"
            />
          </div>
        </div>

        <div class="pl-5 mt-3">
          <input type="file" name="file" value="">
        </div>

          <textarea
            required
            rows="5"
            name="profile"
            class="form-control mt-5 border border-info"
            value="<%= user.introduction %>"
          ></textarea>

          <div class="offset-md-11 mt-2">
            <button class="btn btn-primary">編集</button>
          </div>

        </div>
      </form>

      <script type="text/javascript" lang="javascript">
        // アイコン画像のプレビューを実装
        document.getElementById('file').addEventListener('change', function (e) {
          // 1枚だけ表示する
          var file = e.target.files[0];

          // ファイルリーダー作成
          var fileReader = new FileReader();
          fileReader.onload = function() {
            // Data URIを取得
            var dataUri = this.result;

            // img要素に表示
            var img = document.getElementById('preview');
            img.src = dataUri;
          };
         // ファイルをData URIとして読み込む
        fileReader.readAsDataURL(file);
        });
      </script>


      <script src="/javascripts/bunble.js"></script>
    </div>
  </body>
</html>
