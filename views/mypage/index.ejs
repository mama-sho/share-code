<!--マイページ-->
<!DOCTYPE html>
<html lang="ja">
  <%- include('../include/head') %>
  <body>
    <!-- ヘッダー部分 -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
      <div class="container">
        <h2 class="navbar-brand font-italic">Share Code</h2>
        <ul class="navbar-nav">
          <li class="nav-item"><a href="/posts" class="nav-link">トップ</a></li>
          <li class="nav-item"><a href="/user-list" class="nav-link">ユーザー</a></li>
          <li class="nav-item"><a href="/posts/new" class="nav-link">新規投稿</a></li>
          <li class="nav-item active"><a href="/mypage" class="nav-link">マイページ</a></li>
          <li class="nav-item"><a href="/login" class="nav-link">ログイン</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <h1 class="pl-5">マイページ</h1>
        <div class="w-100" style="border:1px solid #333"></div>

        <div class="col-3 offset-md-1 mt-4">
          <img class="mypage-icon" src="https://s3-ap-northeast-1.amazonaws.com/share-code.bucket/upload-icon/<%= user.iconFileName %>" alt="">
        </div>

        <div class="d-flex flex-column row-h1 offset-md-3">
          <div class="item-h1 mt-5">
            <label>username</label>
            <h1><%= user.name %></h1>
          </div>

          <div class="item-h1 mt-3">
            <label>email</label>
            <h4><%= user.email %></h4>
          </div>
        </div>
      </div>

      
      <p class="mt-5 pl-3">profile</p>
      <div class="row">
          <div class="w-75 border border-secondary rounded ml-2"><%= user.introduction %></div>
        <div class="col">
          <a href="/mypage/edit">編集する</a>
        </div>
        <div class="col">
          <a href="/mypage/delete">退会</a>
        </div>
        <div class="col">
          <a href="/logout">ログアウト</a>
        </div>
      </div>
      
      <!--自分が投稿した物を表示-->
     <% posts.forEach(post => { %>
       <div class="card" style="width: 25rem;">
        <% if (post.isOriginal === "true") { %>
          <div class="card-header font-weight-bold bg-primary"><%= post.user.name %><i class="far fa-comment float-right mr-1 fa-lg"></i><i class="far fa-heart float-right mr-3 fa-lg"></i></i></div>
          <div class="card-body">
          <h4 class="card-title"><%= post.songName %></h4>
          <span>original</span>
        <% } else { %>
          <div class="card-header font-weight-bold bg-success"><%= post.user.name %><i class="far fa-comment float-right mr-1 fa-lg"></i><i class="far fa-heart float-right mr-3 fa-lg"></i></i></div>
          <div class="card-body">
          <h4 class="card-title"><%= post.songName %></h4>
        <% }; %>
            <p class="card-text"><%= post.codeProg %></p>
            <p class="card-text"><%= post.memo %></p>
         </div>
       </div>
          <br />
      <% }); %>

      <script src="/javascripts/bunble.js"></script>
    </div>
  </body>
</html>
